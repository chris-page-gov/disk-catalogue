{
  // Dev Container for disk-catalogue
  "name": "disk-catalogue",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "postCreateCommand": "pip install --user -e .[dev] || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "mounts": [
    "source=/Volumes,target=/host/Volumes,type=bind,consistency=cached,readonly"
  ]
}
